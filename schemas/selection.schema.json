{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["signals", "tags"],
  "properties": {
    "signals": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["evidence", "reason"],
        "properties": {
          "evidence": {"type": "string"},
          "reason": {"type": "string"}
        },
        "additionalProperties": false
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["tag", "why"],
        "properties": {
          "tag": {"type": "string"},
          "why": {"type": "string"}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
