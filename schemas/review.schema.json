{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["findings"],
  "properties": {
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "file",
          "lines",
          "source",
          "tags",
          "severity",
          "message"
        ],
        "properties": {
          "file": {"type": "string"},
          "lines": {"type": "string"},
          "source": {
            "type": "object",
            "required": ["type", "id"],
            "properties": {
              "type": {
                "type": "string",
                "enum": ["rule", "process", "policy"]
              },
              "id": {"type": "string"}
            },
            "additionalProperties": false
          },
          "tags": {
            "type": "array",
            "items": {"type": "string"}
          },
          "severity": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical"]
          },
          "message": {"type": "string"}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
